---
const socialMedia=[
    {
        name:'instagram',
        image:'/image/instagram-icon.svg',
        link:''
    },
    {
        name:'whatsapp',
        image:'/image/whatsapp-icon.svg',
        link:''
    },
    {
        name:'email',
        image:'/image/email-icon.svg',
        link:''
    }
]
const navegation=['Portfolio','Service','Booking']
---
<footer class="flex bg-gray-400 w-full h-[312px] mt-10 justify-center">
    <section class=" flex justify-evenly items-center gap-80 max-w-[1920px] font-lora">
        <div class="flex flex-col items-center justify-baseline gap-[30px] h-[200px]">
            <h5 class="text-2xl">social medias</h5>
            <div class=" flex gap-7">
                {
                    socialMedia.map((sm)=>{
                        return(
                            <img src={sm.image} alt={sm.name}/>
                        )
                    })
                }
            </div>
        </div>
        <div class=" flex flex-col items-center gap-[30px]">
            <h2 class="text-4xl font-satisfy">Berbat Photos</h2>
            <a class="text-lg italic" href="https://www.instagram.com/berbatphotos/">@berbatphotos</a>
        </div>
        <div class=" flex flex-col items-center font-lora gap-6">
            <h5 class="text-2xl">Find more</h5>
            <div class="flex flex-col gap-[30px]">
                {
                    navegation.map((page)=>{
                        return(
                            <p class="text-lg">{page}</p>
                        )
                    })
                }
            </div>
        </div>
    </section>
</footer>