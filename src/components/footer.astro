---
import FooterDesktop from "./footerDesktop.astro"
import FooterMobile from "./footerMobile.astro"

const {Data}= Astro.props

---
<footer 
    x-data
    x-init="$store.display.setDisplay()"
    class="flex bg-brighter1 w-full h-full md:h-[168px] lg:h-[293px] mt-10 justify-center"
    @resize.window.debounce="$store.display.setDisplay()"
>
    <template x-data x-if="$store.display.screen=='desktop'||$store.display.screen=='tablet'">
        <FooterDesktop Data={Data}/>
    </template>
    <template x-data x-if="$store.display.screen=='mobile'">
        <FooterMobile Data={Data}/>
    </template>
</footer>
