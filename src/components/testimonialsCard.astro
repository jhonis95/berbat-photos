---
const { title, subtitle,content } = Astro.props;
---
<div class=" rounded-xl p-[14px] bg-gray-300 font-lora flex flex-col justify-center items-center gap-[10px]">
    <div class="flex flex-col gap-[5px] items-center">
        <h3 class="text-2xl">{title}</h3>
        <h5 class="text-sm">{subtitle}</h5>
    </div>
    <p class="text-base text-center max-w-[412px]">{content}</p>
</div>