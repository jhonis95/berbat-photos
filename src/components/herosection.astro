---
import { Image } from "astro:assets";

const { title, subtitle, image } = Astro.props;
---

<section class=" relative flex flex-col justify-center items-center">
    <Image class="w-[1677px] h-[745px] rounded-xl" src={image} alt="thumnail"/>
    <div class=" text-brighter2 absolute flex flex-col justify-center items-center gap-4 font-lora italic">
        <h3 class="text-[46px]">{title}</h3>
        <p class="text-3xl">{subtitle}</p>
    </div>
</section>