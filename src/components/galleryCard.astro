---
const { title, subtitle, images, button } = Astro.props;
---
<section class=" flex flex-col gap-[30px]">
    <div class="flex flex-col gap-[15px] justify-center items-center font-lora">
        <h4 class=" italic text-5xl">{title}</h4>
        <p class=" text-3xl">{subtitle}</p>
    </div>
    <div class="flex flex-wrap flex-col gap-x-[40px] gap-y-[19px] h-[581px]">
        <img class=" rounded-2xl w-[400px] h-[280px] object-cover object-center" src={images[0]} alt="">
        <img class=" rounded-2xl w-[400px] h-[280px] object-cover object-center" src={images[1]} alt="">
        <img class=" rounded-2xl w-[400px] grow" src={images[2]} alt="">
        <img class=" rounded-2xl w-[400px] grow" src={images[3]} alt="">
    </div>
    <div class=" w-full flex justify-center rounded-md font-lora">
        <a class=" px-10 py-2.5 bg-gray-400" href={button.link}>
            <button class="text-lg italic">{button.text}</button>
        </a>
    </div>
</section>