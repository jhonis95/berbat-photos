---
import NavigationDesktop from './navigationDesktop.astro';
import NavigationMobile from './navigationMobile.astro';
import NavigationTablet from './navigationTablet.astro';

const Data = Astro.props

---
<nav 
    x-data
    x-init="$store.display.setDisplay()"
    class="w-full flex justify-center h-[62px] lg:h-[130px]"
    @resize.window.debounce="$store.display.setDisplay()"
>
    <template x-data x-if="$store.display.screen=='desktop'">
        <NavigationDesktop pageData={Data}/>
    </template>
    <template x-data x-if="$store.display.screen=='tablet'">
        <NavigationTablet pageData={Data}/>
    </template>
    <template x-data x-if="$store.display.screen=='mobile'">
        <NavigationMobile pageData={Data}/>
    </template>
</nav>